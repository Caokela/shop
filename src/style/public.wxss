.box_pay {
    width: 100%;
    height: 120rpx;
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 9999;
    background: #fff;
}

.box_pay .green-btn {
    background-color: #FF3300;
    color: #fff;
    font-size: 32rpx;
    border-radius: 60rpx;
}

.box_pay .green-btn:hover {
    background-color: #FF3300;
}

.box_pay .green-btn::after {
    border: none;
}

.box_pay .green-btn[disabled] {
    background: #FF3300 !important;
}

.box_pay button {
    width: 680rpx;
    height: 80rpx;
    line-height: 80rpx;
    position: absolute;
    top: 20rpx;
    left: 35rpx;
}

.border {
    box-shadow: 0px 4px 40px rgba(0, 0, 0, 0.1);
    border-radius: 60rpx;
}
